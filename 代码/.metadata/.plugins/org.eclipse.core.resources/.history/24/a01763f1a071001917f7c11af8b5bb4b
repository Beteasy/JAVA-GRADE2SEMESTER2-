import java.io.*;
import java.net.*;

public class ServerThread implements Runnable{

	Socket socket = null;
	DataInputStream in = null;
	DataOutputStream out = null;
	
	
	ServerThread(Socket socket){
		this.socket = socket;
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		String str;
		int i=0;
		str = new String("");
		try {
			in = new DataInputStream(socket.getInputStream());
			out = new DataOutputStream(socket.getOutputStream());
			while(i<3) {
				str = in.readUTF();
				System.out.println("服务器收到:"+str);
				
				out.writeUTF("Server Message"+i);
				System.out.println("服务器发送:Server Message"+i);
				i++;
				System.out.println();
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
//		try {
//			socket.close();
//		} catch (IOException e) {
//			// TODO Auto-generated catch block
//			e.printStackTrace();
//		}
	}
}
